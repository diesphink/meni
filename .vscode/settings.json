{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
  },
  "files.exclude": {
    "**/__pycache__": true,
    ".pytest_cache": true,
    "venv": true
  },
  "black-formatter.args": [
    "--line-length",
    "150"
  ],
  "nixEnvSelector.nixFile": "${workspaceFolder}/shell.nix"
}
